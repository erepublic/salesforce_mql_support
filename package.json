{
  "name": "salesforce_mql_support",
  "private": true,
  "version": "1.0.0",
  "description": "Salesforce MQL support project",
  "scripts": {
    "lint": "eslint **/{aura,lwc}/**/*.js",
    "test": "npm run test:unit",
    "test:unit": "sfdx-lwc-jest",
    "test:unit:watch": "sfdx-lwc-jest --watch",
    "test:unit:debug": "sfdx-lwc-jest --debug",
    "test:unit:coverage": "sfdx-lwc-jest --coverage",
    "test:mql-lambda": "jest -c jest.mql-lambda.config.cjs",
    "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}\"",
    "sf:org:list": "sf org list",
    "sf:auth:sandbox": "sf org login web --alias mql-sandbox --instance-url https://test.salesforce.com --set-default",
    "sf:auth:prod": "sf org login web --alias mql-prod --instance-url https://login.salesforce.com",
    "sf:retrieve": "sf project retrieve start --target-org mql-sandbox --manifest manifest/package.xml",
    "sf:deploy:sandbox": "sf project deploy start --target-org mql-sandbox --source-dir force-app --test-level RunLocalTests",
    "sf:validate:prod": "sf project deploy validate --target-org mql-prod --source-dir force-app --test-level RunLocalTests",
    "sf:quick:prod": "node scripts/deploy-quick-prod.js",
    "prepare": "husky || true",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@lwc/eslint-plugin-lwc": "^3.1.0",
    "@prettier/plugin-xml": "^3.4.1",
    "@salesforce/eslint-config-lwc": "^4.0.0",
    "@salesforce/eslint-plugin-aura": "^3.0.0",
    "@salesforce/eslint-plugin-lightning": "^2.0.0",
    "@salesforce/sfdx-lwc-jest": "^7.0.2",
    "eslint": "^9.29.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.14.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "prettier-plugin-apex": "^2.2.6"
  },
  "lint-staged": {
    "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,xml,yaml,yml}": [
      "prettier --write"
    ],
    "**/{aura,lwc}/**/*.js": [
      "eslint"
    ],
    "**/lwc/**": [
      "sfdx-lwc-jest -- --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
