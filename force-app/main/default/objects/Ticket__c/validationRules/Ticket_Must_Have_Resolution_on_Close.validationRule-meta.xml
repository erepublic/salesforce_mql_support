<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Ticket_Must_Have_Resolution_on_Close</fullName>
    <active>false</active>
    <description
  >Salesforce Tickets must have a resolution in order to be closed.</description>
    <errorConditionFormula>TEXT(Phase__c) = &quot;Closed&quot; &amp;&amp;

   RecordTypeId = &quot;012a0000001RR3r&quot; &amp;&amp;

   Resolution__c = &quot;&quot; &amp;&amp;

   Date_Closed__c &gt; DATEVALUE(&quot;2024-04-30&quot;)</errorConditionFormula>
    <errorDisplayField>Resolution__c</errorDisplayField>
    <errorMessage
  >Oops! Please provide a detailed resolution prior to closing the ticket.</errorMessage>
</ValidationRule>
