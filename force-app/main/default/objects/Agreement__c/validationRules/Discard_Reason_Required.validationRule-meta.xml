<?xml version="1.0" encoding="UTF-8" ?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Discard_Reason_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL(  Status__c , &quot;Discarded&quot;), 
ISBLANK( TEXT( Discard_Reason__c )) 
)</errorConditionFormula>
    <errorDisplayField>Discard_Reason__c</errorDisplayField>
    <errorMessage
  >If the Status is &quot;Discarded&quot;, then the field &quot;Discard Reason&quot; is required.</errorMessage>
</ValidationRule>
