    <formulas>
        <name>f_Paid_Registration_Text</name>
        <dataType>String</dataType>
        <expression>IF(
(TEXT({!$Record.Transaction_ID__c})=&quot;&quot;), &quot;No&quot;, &quot;Yes&quot;)</expression>
    </formulas>
    <formulas>
        <name>f_Reg_Email_Domain_or_Account_Matches_Sponsor</name>
        <dataType>Boolean</dataType>
        <expression>OR(
        (CONTAINS({!$Record.Sponsor_Company__c},{!$Record.Registrant_Name__r.Account.Name})),
        (CONTAINS({!$Record.Sponsor_Company__c},{!$Record.Registrant_Name__r.Company_Name_Holder__c})),
        (CONTAINS(
            LOWER({!$Record.Sponsor_Company__c}),
        TRIM(
            LEFT({!$Record.Registrant_Name__r.Email_Domain__c},
                (LEN({!$Record.Registrant_Name__r.Email_Domain__c}) - 4))
                )))
   )</expression>
    </formulas>
    <formulas>
        <name>f_Test_Account_or_Reg</name>
        <dataType>Boolean</dataType>
        <expression>OR(
CONTAINS({!$Record.Registrant_Name__r.Account.Name},&quot;TEST&quot;),
CONTAINS({!$Record.Registrant_Email__c},&quot;@erepublic.com&quot;),
CONTAINS({!$Record.Registrant_Email__c},&quot;@govtech.com&quot;),
CONTAINS({!$Record.Registrant_Email__c},&quot;@governing.com&quot;),
CONTAINS({!$Record.Registrant_Email__c},&quot;@techwire.net&quot;),
CONTAINS({!$Record.Registrant_Email__c},&quot;@emergencymgmt.com&quot;),
CONTAINS({!$Record.Registrant_Email__c},&quot;@digitalcommunities.com&quot;),
CONTAINS({!$Record.Contract_Account__c},&quot;TEST&quot;)
)</expression>
    </formulas>
