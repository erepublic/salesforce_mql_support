    <decisions>
        <name>Account_is_Mismatched</name>
        <label>Account is Mismatched?</label>
        <locationX>176</locationX>
        <locationY>335</locationY>
        <defaultConnector>
            <targetReference>Get_Sponsor_Registrant_Account</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Account Mismatch</defaultConnectorLabel>
        <rules>
            <name>Match</name>
            <conditionLogic>(1 OR 2 OR 3 OR 4 OR 6) AND 5</conditionLogic>
            <conditions>
                <leftValueReference
        >$Record.Contract_Account__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference
          >$Record.Registrant_Name__r.Account.Name</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference
        >$Record.Sponsor_Company__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference
          >$Record.Registrant_Name__r.Account.Name</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference
        >$Record.Sponsor_Company__c</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <elementReference
          >$Record.Reg_Company_Name__c</elementReference>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference
        >f_Reg_Email_Domain_or_Account_Matches_Sponsor</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>f_Test_Account_or_Reg</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>f_Known_Partner</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <label>Account Match</label>
        </rules>
    </decisions>
    <description
  >Sends an Email Alert to Kristen Rodgers and the Account Owner when a Registrant is with an Account that differs from the Sponsor Company.</description>
    <environments>Default</environments>
    <formulas>
        <name>f_Known_Partner</name>
        <dataType>Boolean</dataType>
        <expression>OR(
        AND(Contains(
               {!$Record.Registrant_Name__r.Account_Name_Lookup_Formula__c},&quot;Mythics&quot;),
                  Contains({!$Record.Contract_Account__c},&quot;Oracle&quot;)),
        AND(Contains(
                {!$Record.Registrant_Name__r.Account_Name_Lookup_Formula__c}, &quot;Oracle&quot;),
                  Contains({!$Record.Contract_Account__c},&quot;Mythics&quot;)),
        AND(Contains(
               {!$Record.Registrant_Name__r.Account_Name_Lookup_Formula__c},&quot;George P. Johnson&quot;),
                  Contains({!$Record.Contract_Account__c},&quot;IBM&quot;)),
        AND(Contains(
                {!$Record.Registrant_Name__r.Account_Name_Lookup_Formula__c},&quot;George P. Johnson&quot;),
                  Contains({!$Record.Contract_Account__c},&quot;Kyndryl&quot;)),
        AND(Contains(
                {!$Record.Registrant_Name__r.Account_Name_Lookup_Formula__c},&quot;Charter&quot;),
                  Contains({!$Record.Contract_Account__c},&quot;Spectrum Enterprise&quot;))
   )</expression>
    </formulas>
