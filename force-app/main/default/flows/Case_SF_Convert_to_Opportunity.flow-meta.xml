    </formulas>
    <formulas>
        <name>f_Product_Id</name>
        <dataType>String</dataType>
        <expression
    >IF(CONTAINS({!Get_Case.Opportunity_Lead_Source_Detail__c}, &quot;Navigator&quot;), 
    &quot;01t140000053qgLAAQ&quot;, 
    IF(CONTAINS({!Get_Case.Opportunity_Lead_Source_Detail__c}, &quot;Insider TX&quot;), 
    &quot;01t5Y00000EtwNjQAJ&quot;, 
    &quot;01t140000053sASAAY&quot;))</expression>
    </formulas>
