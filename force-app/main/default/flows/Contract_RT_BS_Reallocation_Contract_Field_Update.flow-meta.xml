    <decisions>
        <description
    >When the Status changes to Approved, the reallocation has been confirmed as completed on the Opportunity record.</description>
        <name>Status_changed_to_Approved</name>
        <label>Status changed to Approved?</label>
        <locationX>446</locationX>
        <locationY>287</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Approved</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Status</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Status</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Approved</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference
        >Insert_Date_Reallocation_Completed_as_Today</targetReference>
            </connector>
            <label>Approved</label>
        </rules>
        <rules>
            <name>Primary_Opportunity_Changed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference
        >$Record.Primary_Opportunity__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Insert_Primary_Opp_Owner</targetReference>
            </connector>
            <label>Primary Opportunity Changed</label>
        </rules>
        <rules>
            <name>Split_Opportunity_Changed</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference
        >$Record.Split_Opportunity__c</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference
        >$Record.Split_Opportunity__c</leftValueReference>
                <operator>IsChanged</operator>
                <rightValue>
                    <booleanValue>true</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Insert_Split_Opp_Owner</targetReference>
            </connector>
            <label>Split Opportunity Changed</label>
        </rules>
    </decisions>
