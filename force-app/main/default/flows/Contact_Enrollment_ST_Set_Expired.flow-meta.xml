    <decisions>
        <name>Is_Date_Expires_Less_than_Today</name>
        <label>Is Date Expires Less than Today?</label>
        <locationX>182</locationX>
        <locationY>252</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>Yes_Date_Expires_has_Passed</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.Date_Expires__c</leftValueReference>
                <operator>LessThan</operator>
                <rightValue>
                    <elementReference>$Flow.CurrentDate</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Set_Expired_True</targetReference>
            </connector>
            <label>Yes, Date Expires has Passed</label>
        </rules>
    </decisions>
