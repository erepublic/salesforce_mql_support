<?xml version="1.0" encoding="UTF-8" ?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <assignments>
        <name>Add_LF_Record_to_Update_Variable</name>
        <label>Add LF Record to Update Variable</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference
      >var_collection_LF_records_to_update</assignToReference>
            <operator>Add</operator>
            <value>
                <elementReference>Logistics_Financials_Loop</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Logistics_Financials_Loop</targetReference>
        </connector>
    </assignments>
    <assignments>
        <name>Assign_Sum_to_Actual</name>
        <label>Assign Sum to Actual</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignmentItems>
            <assignToReference
      >Logistics_Financials_Loop.Actual_Cost__c</assignToReference>
            <operator>Assign</operator>
            <value>
                <elementReference>Sum_Category_and_Year</elementReference>
            </value>
        </assignmentItems>
        <connector>
            <targetReference>Add_LF_Record_to_Update_Variable</targetReference>
        </connector>
    </assignments>
    <collectionProcessors>
        <description
    >Filters the transaction line items to only the current category for the current year.</description>
        <name>Collection_Filter_Category_and_Year</name>
        <elementSubtype>FilterCollectionProcessor</elementSubtype>
        <label>Collection Filter - Category and Year</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNextValueToReference
    >currentItem_Collection_Filter_Category_and_Year</assignNextValueToReference>
        <collectionProcessorType
    >FilterCollectionProcessor</collectionProcessorType>
        <collectionReference
    >var_collection_transaction_line_items</collectionReference>
        <conditionLogic>and</conditionLogic>
        <conditions>
            <leftValueReference
      >currentItem_Collection_Filter_Category_and_Year.Expense_Code_Formula__c</leftValueReference>
            <operator>EqualTo</operator>
            <rightValue>
                <elementReference
        >Logistics_Financials_Loop.Category__c</elementReference>
            </rightValue>
        </conditions>
        <conditions>
            <leftValueReference
      >currentItem_Collection_Filter_Category_and_Year.Exp_Year__c</leftValueReference>
            <operator>EqualTo</operator>
            <rightValue>
                <elementReference>f_event_year_text</elementReference>
            </rightValue>
        </conditions>
        <connector>
            <targetReference>Sum_Category_and_Year</targetReference>
        </connector>
    </collectionProcessors>
    <decisions>
        <description
    >Checks if the triggering event has the GL Account (cost) field populated.</description>
        <name>GL_and_year_set</name>
        <label>GL and year set?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Update_Triggering_Event_Fail</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No GL or year</defaultConnectorLabel>
        <rules>
            <name>Yes_GL_and_year_set</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Record.GL_Account__c</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>$Record.Event_Year__c</leftValueReference>
                <operator>IsBlank</operator>
                <rightValue>
                    <booleanValue>false</booleanValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Get_Transactions</targetReference>
            </connector>
            <label>Yes, GL and year set</label>
        </rules>
    </decisions>
    <description
  >Checking a box on the event triggers this flow to run through the related logistics financials records and update them with data from finance.</description>
    <environments>Default</environments>
    <formulas>
        <name>f_event_year_text</name>
        <dataType>String</dataType>
        <expression>TEXT({!$Record.Event_Year__c})</expression>
    </formulas>
    <formulas>
        <description
    >Displays Jan 1 of the year prior to the event year.</description>
        <name>f_FirstDayofYearBeforeEvent</name>
        <dataType>Date</dataType>
        <expression>DATE({!$Record.Event_Year__c} - 1 , 1 , 1 )</expression>
    </formulas>
    <formulas>
        <name>f_now</name>
        <dataType>DateTime</dataType>
        <expression>NOW()</expression>
    </formulas>
    <interviewLabel
  >Event or Conference - RT AS - Actuals Sync {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Event or Conference - RT AS - Actuals Sync</label>
    <loops>
        <name>Logistics_Financials_Loop</name>
        <label>Logistics Financials Loop</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <collectionReference
    >var_collection_logistics_financials</collectionReference>
        <iterationOrder>Asc</iterationOrder>
        <nextValueConnector>
            <targetReference
      >Collection_Filter_Category_and_Year</targetReference>
        </nextValueConnector>
        <noMoreValuesConnector>
            <targetReference>Update_all_LF_Records</targetReference>
        </noMoreValuesConnector>
    </loops>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description
    >Gets the logistics financials records associated with the event (up to 100).</description>
        <name>Get_Logistics_Financials</name>
        <label>Get Logistics Financials</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound
    >false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Logistics_Financials_Loop</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Event__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </filters>
        <limit>
            <numberValue>100.0</numberValue>
        </limit>
        <object>Logistics_Financials__c</object>
        <outputReference>var_collection_logistics_financials</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>Actual_Cost__c</queriedFields>
        <queriedFields>Category__c</queriedFields>
    </recordLookups>
    <recordLookups>
        <description
    >Gets the first 600 records of transaction line items in the related GL going back two years. Hopefully this is everything for the event.</description>
        <name>Get_Transactions</name>
        <label>Get Transactions</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound
    >false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Get_Logistics_Financials</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>c2g__GeneralLedgerAccount__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>$Record.GL_Account__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>c2g__TransactionDate__c</field>
            <operator>GreaterThanOrEqualTo</operator>
            <value>
                <elementReference>f_FirstDayofYearBeforeEvent</elementReference>
            </value>
        </filters>
        <limit>
            <numberValue>600.0</numberValue>
        </limit>
        <object>c2g__codaTransactionLineItem__c</object>
        <outputReference>var_collection_transaction_line_items</outputReference>
        <queriedFields>Id</queriedFields>
        <queriedFields>c2g__TransactionDate__c</queriedFields>
        <queriedFields>Exp_Code__c</queriedFields>
        <queriedFields>Exp_Year__c</queriedFields>
        <queriedFields>c2g__HomeValue__c</queriedFields>
        <queriedFields>c2g__LineDescription__c</queriedFields>
        <queriedFields>c2g__LineReference__c</queriedFields>
        <queriedFields>Document_Reference__c</queriedFields>
        <queriedFields>Document_Description__c</queriedFields>
        <queriedFields>Expense_Code_Formula__c</queriedFields>
    </recordLookups>
    <recordUpdates>
        <name>Update_all_LF_Records</name>
        <label>Update all LF Records</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Triggering_Event_Success</targetReference>
        </connector>
        <inputReference>var_collection_LF_records_to_update</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Triggering_Event_Fail</name>
        <label>Update Triggering Event</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Actuals_Sync__c</field>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Triggering_Event_Success</name>
        <label>Update Triggering Event</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Actuals_Last_Synced__c</field>
            <value>
                <elementReference>f_now</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>Actuals_Sync__c</field>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>GL_and_year_set</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Actuals_Sync__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Events__c</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <transforms>
        <name>Sum_Category_and_Year</name>
        <label>Sum - Category and Year</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Assign_Sum_to_Actual</targetReference>
        </connector>
        <dataType>Currency</dataType>
        <isCollection>false</isCollection>
        <scale>0</scale>
        <storeOutputAutomatically>true</storeOutputAutomatically>
        <transformValues>
            <transformValueActions>
                <inputParameters>
                    <name>aggregationValues</name>
                    <value>
                        <elementReference
            >Collection_Filter_Category_and_Year</elementReference>
                    </value>
                </inputParameters>
                <inputParameters>
                    <name>aggregationFieldReference</name>
                    <value>
                        <complexValue
            >{&quot;dataType&quot;:&quot;SObject&quot;,&quot;objectType&quot;:&quot;c2g__codaTransactionLineItem__c&quot;,&quot;fieldReferences&quot;:[&quot;c2g__HomeValue__c&quot;],&quot;elementReference&quot;:&quot;Collection_Filter_Category_and_Year&quot;}</complexValue>
                        <complexValueType>FieldReference</complexValueType>
                    </value>
                </inputParameters>
                <transformType>Sum</transformType>
            </transformValueActions>
        </transformValues>
    </transforms>
    <variables>
        <name>currentItem_Collection_Filter_Category_and_Year</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>c2g__codaTransactionLineItem__c</objectType>
    </variables>
    <variables>
        <name>var_collection_LF_records_to_update</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Logistics_Financials__c</objectType>
    </variables>
    <variables>
        <name>var_collection_logistics_financials</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>Logistics_Financials__c</objectType>
    </variables>
    <variables>
        <name>var_collection_transaction_line_items</name>
        <dataType>SObject</dataType>
        <isCollection>true</isCollection>
        <isInput>false</isInput>
        <isOutput>false</isOutput>
        <objectType>c2g__codaTransactionLineItem__c</objectType>
    </variables>
</Flow>
