        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Contact_Record_Type</targetReference>
        </connector>
        <filterLogic>(1 OR 2) AND (3 OR 4)</filterLogic>
        <filters>
            <field>Reg_Type__c</field>
            <operator>IsChanged</operator>
