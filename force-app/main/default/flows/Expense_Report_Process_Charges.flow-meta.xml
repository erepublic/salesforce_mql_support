    <decisions>
        <name>Does_the_charge_need_a_receipt</name>
        <label>Does the charge need a receipt?</label>
        <locationX>396</locationX>
        <locationY>398</locationY>
        <defaultConnector>
            <targetReference
      >Charge_to_Process_yes_receipt_No_Receipt</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>or</conditionLogic>
            <conditions>
                <leftValueReference
        >Loop_through_Charges.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>NEEDS RECEIPT</stringValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference
        >Loop_through_Charges.Status__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>NEEDS CATEGORY &amp; RECEIPT</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Charge_to_Process_yes_receipt</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description
  >Add decision tree inside loop. Flow used to process the charges on an expense report.</description>
    <formulas>
        <description
    >displays the amount correctly for use in the flow</description>
        <name>ChargeAmount</name>
        <dataType>Currency</dataType>
        <expression>{!Loop_through_Charges.Amount__c}</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <description
    >Displays a Yes or No if a receipt is attached to the charge.</description>
        <name>ReceiptAttached</name>
        <dataType>String</dataType>
        <expression
    >IF({!Loop_through_Charges.Receipt_Attached__c} = TRUE, &quot;Yes&quot;, &quot;No&quot;)</expression>
    </formulas>
    <formulas>
        <description
    >Displays a Yes or No if a receipt is required for the charge in question.</description>
        <name>ReceiptNeeded</name>
        <dataType>String</dataType>
        <expression>IF({!Loop_through_Charges.Amount__c}&gt;= 75.00 = TRUE,
&quot;Yes&quot;, &quot;No&quot;)</expression>
    </formulas>
