        <connector>
            <targetReference>Get_Sales_Invoice</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Authorize_Net_Transaction_ID__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>c2g__codaCashEntryLineItem__c</object>
        <recordTriggerType>Create</recordTriggerType>
