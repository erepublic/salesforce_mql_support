    <recordLookups>
        <name>Get_Sales_Invoice</name>
        <label>Get Sales Invoice</label>
        <locationX>380</locationX>
        <locationY>287</locationY>
        <assignNullValuesIfNoRecordsFound
    >false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference
      >Was_a_record_found_AND_total_doesn_t_match</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Authorize_Net_Transaction_ID__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference
        >$Record.Authorize_Net_Transaction_ID__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>CreatedDate</field>
            <operator>GreaterThan</operator>
            <value>
                <dateTimeValue>2024-01-01T08:00:00.000Z</dateTimeValue>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>c2g__codaInvoice__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <name>Update_Cash_Entry_Line_Item</name>
        <label>Update Line Charges</label>
        <locationX>50</locationX>
        <locationY>611</locationY>
        <connector>
            <targetReference>Update_Cash_Entry_Value</targetReference>
        </connector>
        <inputAssignments>
            <field>c2g__Charges__c</field>
            <value>
                <elementReference>f_Update_Line_Charges</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <recordUpdates>
        <name>Update_Cash_Entry_Value</name>
        <label>Update Cash Entry Value</label>
        <locationX>50</locationX>
        <locationY>719</locationY>
        <inputAssignments>
            <field>c2g__CashEntryValue__c</field>
            <value>
                <elementReference
        >Get_Sales_Invoice.c2g__InvoiceTotal__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
