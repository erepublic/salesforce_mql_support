    <description
  >Updates the Contract&apos;s Change log whenever the Status, Event, Type, Sponsorship Level, Level Change, Branding Guidelines, Website, Special Terms, Event Passes, or Contact Role Changes are updated.
1/6/2026 (v3): Updated Contact Role Change log to use Current Date instead of Last Modified Date.</description>
    <environments>Default</environments>
    <formulas>
        <name>f_Change_Log</name>
        <dataType>String</dataType>
        <expression>&quot;[&quot;
&amp;TEXT(MONTH({!$Flow.CurrentDate}))
&amp;&quot;-&quot;
&amp;TEXT(DAY({!$Flow.CurrentDate}))
&amp;&quot; &quot;
&amp;UPPER(LEFT({!$User.Alias},2))
&amp;&quot;] &quot;
&amp;
IF(ISCHANGED({!$Record.Event__c})=TRUE,&quot;Event was changed from &quot;&amp; {!var_Prior_Event_Name} &amp;&quot; to &quot;&amp; {!var_Current_Event_Name} &amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Type__c} )=TRUE,&quot;Type was changed to &quot;&amp; TEXT({!$Record.Type__c})&amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Sponsorship_Level__c})=TRUE,&quot;Sponsorship Level was changed from &quot;&amp;TEXT(PRIORVALUE({!$Record.Sponsorship_Level__c}))&amp;&quot; to &quot;&amp; TEXT({!$Record.Sponsorship_Level__c})&amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Level_Change__c} )=TRUE,&quot;Level Changed due to &quot;&amp; TEXT({!$Record.Level_Change__c})&amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Branding_Guidelines__c})=TRUE,&quot;Branding Guidelines was changed to &quot;&amp; {!$Record.Branding_Guidelines__c}&amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Website_Manual__c} )=TRUE,&quot;Website was changed to &quot;&amp; {!$Record.Website_Manual__c} &amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Sales_Rep_Contracts__c} )=TRUE,&quot;Sales Rep changed to &quot;&amp;{!$Record.Sales_Rep_Contracts__r.FirstName}&amp;&quot; &quot;&amp; {!$Record.Sales_Rep_Contracts__r.LastName}&amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Event_Passes__c} )=TRUE,&quot;Event Passes was changed from &quot;&amp;TEXT({!$Record__Prior.Event_Passes__c})&amp;&quot; to &quot;&amp; TEXT({!$Record.Event_Passes__c}) &amp;&quot;.&quot; &amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.SpecialTerms} )=TRUE,&quot;Special Terms updated.&quot;&amp;BR(),&quot;&quot;)
&amp;
IF(ISCHANGED( {!$Record.Contact_Role_Changes__c} )=TRUE,&quot;Contact Roles updated: &quot;&amp; {!$Record.Contact_Role_Changes__c} &amp;BR(),&quot;&quot;)
&amp;
{!$Record.Change_Log__c}</expression>
    </formulas>
