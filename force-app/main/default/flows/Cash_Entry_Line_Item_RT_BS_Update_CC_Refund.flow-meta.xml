<?xml version="1.0" encoding="UTF-8" ?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <decisions>
        <description
    >Checks to see if the SCR Customer Reference matches the original cash entry&apos;s authorize.net number.  This serves as a way to end the interview without attempting the update if nothing matches. I know this step is redundant.</description>
        <name>Is_Authoize_net_Id_filled_in</name>
        <label>Has matching Auth Id?</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnectorLabel>No</defaultConnectorLabel>
        <rules>
            <name>Yes</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference
        >Get_Sales_Credit_Note.c2g__CustomerReference__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <elementReference
          >$Record.Authorize_Net_Transaction_ID__c</elementReference>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Update_Cash_Entry_Line_Item</targetReference>
            </connector>
            <label>Yes</label>
        </rules>
    </decisions>
    <description
  >Updates cash entry to match with existing SCR records if authorize.net id is present.</description>
    <environments>Default</environments>
    <interviewLabel
  >Cash Entry Line Item - RT BS - Update CC Refund {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Cash Entry Line Item - RT BS - Update CC Refund</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordLookups>
        <description
    >Gets the sales credit note with the same id as the cash entry. (if there is one)</description>
        <name>Get_Sales_Credit_Note</name>
        <label>Get Sales Credit Note</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <assignNullValuesIfNoRecordsFound
    >false</assignNullValuesIfNoRecordsFound>
        <connector>
            <targetReference>Is_Authoize_net_Id_filled_in</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>c2g__CustomerReference__c</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference
        >$Record.Authorize_Net_Transaction_ID__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>CreatedDate</field>
            <operator>GreaterThan</operator>
            <value>
                <dateTimeValue>2024-01-01T08:00:00.000Z</dateTimeValue>
            </value>
        </filters>
        <getFirstRecordOnly>true</getFirstRecordOnly>
        <object>c2g__codaCreditNote__c</object>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </recordLookups>
    <recordUpdates>
        <description
    >Updates the Cash Entry Line Item to have the Account and Customer Reference from the SCR record.</description>
        <name>Update_Cash_Entry_Line_Item</name>
        <label>Update Cash Entry Line Item</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>c2g__AccountReference__c</field>
            <value>
                <elementReference
        >Get_Sales_Credit_Note.c2g__CustomerReference__c</elementReference>
            </value>
        </inputAssignments>
        <inputAssignments>
            <field>c2g__Account__c</field>
            <value>
                <elementReference
        >Get_Sales_Credit_Note.c2g__Account__c</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Get_Sales_Credit_Note</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Authorize_Net_Transaction_ID__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <object>c2g__codaCashEntryLineItem__c</object>
        <recordTriggerType>Create</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
