    <description
  >Flow to create a cash entry automatically when a payment is received for an invoice.</description>
    <environments>Default</environments>
    <formulas>
        <description
    >Sets the date as the Pmt Date unless blank, then uses today.</description>
        <name>Cash_Entry_Date</name>
        <dataType>Date</dataType>
        <expression
    >IF(ISBLANK({!$Record.Pmt_Date__c})=FALSE,{!$Record.Pmt_Date__c},{!Default_Deposit_Date})</expression>
    </formulas>
    <formulas>
        <name>Cash_Entry_Line_Description</name>
        <dataType>String</dataType>
        <expression
    >TEXT({!$Record.Pmt_Rcvd__c})&amp;&quot; &quot;&amp;LEFT({!$Record.Pmt_Desc__c},245)</expression>
    </formulas>
    <formulas>
        <description
    >Uses pmt amount unless blank then uses Outstanding Value.</description>
        <name>Cash_Entry_Value</name>
        <dataType>Currency</dataType>
        <expression
    >IF(ISBLANK({!$Record.Pmt_Amount__c})=FALSE,{!$Record.Pmt_Amount__c},{!$Record.c2g__OutstandingValue__c})</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Null_Currency</name>
        <dataType>Currency</dataType>
        <expression>null</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>Null_Date</name>
        <dataType>Date</dataType>
        <expression>null</expression>
    </formulas>
    <formulas>
        <name>Null_Text</name>
        <dataType>String</dataType>
        <expression>null</expression>
    </formulas>
    <formulas>
        <name>Pmt_Desc_Text</name>
        <dataType>String</dataType>
        <expression>IF(
ISBLANK({!$Record.Pmt_Desc__c})=TRUE,  &quot;&quot;, &quot; [&quot;&amp;{!$Record.Pmt_Desc__c}&amp;&quot;]&quot;)</expression>
    </formulas>
    <formulas>
        <name>Pmt_Fee_Text</name>
        <dataType>String</dataType>
        <expression>IF(
ISNULL({!$Record.Pmt_Fee__c})=TRUE,  &quot;&quot;, &quot; Bank Fee: $&quot;&amp;TEXT({!$Record.Pmt_Fee__c}))</expression>
    </formulas>
    <formulas>
        <name>Update_Collection_Note</name>
        <dataType>String</dataType>
        <expression
    >TEXT({!Cash_Entry_Date}) &amp; &quot; &quot; &amp; TEXT({!$Record.Pmt_Rcvd__c}) &amp; &quot; rcvd&quot; &amp;&quot; in amt of $&quot; &amp;

IF( {!Cash_Entry_Value}&gt;= 1000000, TEXT(FLOOR({!Cash_Entry_Value} / 1000000)) &amp; &quot;,&quot;, &quot;&quot; 
) &amp; IF({!Cash_Entry_Value} &gt;= 1000,  RIGHT(TEXT(FLOOR({!Cash_Entry_Value} / 1000)), 3) &amp; &quot;,&quot;,  &quot;&quot; ) &amp; 
RIGHT(TEXT(FLOOR({!Cash_Entry_Value})), 3) &amp; &quot;.&quot; &amp; 
IF( MOD({!Cash_Entry_Value}, 1) * 100 &lt; 10, 
  &quot;0&quot; &amp; TEXT(ROUND(MOD({!Cash_Entry_Value}, 1), 2) * 100), 
  TEXT(MIN(ROUND(MOD({!Cash_Entry_Value}, 1), 2) * 100, 99)))

&amp;
&quot; (&quot; &amp; {!Get_Cash_Entry.Name} &amp; &quot;)&quot; &amp;
{!Pmt_Desc_Text} &amp;
{!Pmt_Fee_Text} &amp;
BR() &amp;
{!$Record.Collection_Notes__c}</expression>
    </formulas>
