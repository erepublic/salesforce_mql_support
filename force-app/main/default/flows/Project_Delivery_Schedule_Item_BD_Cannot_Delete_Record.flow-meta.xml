    <customErrors>
        <name>Oops_Cannot_Delete_Record</name>
        <label>Oops Cannot Delete Record</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <customErrorMessages>
            <errorMessage
      >Cannot delete record. Submit request to salesforce@erepublic.com.</errorMessage>
            <fieldSelection>Date__c</fieldSelection>
            <isFieldError>true</isFieldError>
        </customErrorMessages>
    </customErrors>
    <description
  >Custom Error displayed when a user attempts to delete a Project Delivery Schedule Item record and its Payment Status is Approved or Processed. Excludes users in Business Optimization Role.</description>
    <environments>Default</environments>
    <interviewLabel
  >Project Delivery Schedule Item - BD - Cannot Delete Record {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Project Delivery Schedule Item - BD - Cannot Delete Record</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Oops_Cannot_Delete_Record</targetReference>
        </connector>
        <filterFormula>OR(
      TEXT({!$Record.Payment_Status__c}) = &quot;Approved&quot;,
      TEXT({!$Record.Payment_Status__c}) = &quot;Processed&quot;
)
&amp;&amp;
{!$UserRole.Name} &lt;&gt; &quot;Business Optimization&quot;</filterFormula>
        <object>Project_Delivery_Schedule_Item__c</object>
        <recordTriggerType>Delete</recordTriggerType>
        <triggerType>RecordBeforeDelete</triggerType>
    </start>
